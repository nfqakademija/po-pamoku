{% extends 'base.html.twig' %}

{% block body %}
    <header class="bg-profile">
        <div class="container">
            <div class="row align-items-end min-height">
                <div class="col-12">
                    <h2 class="text-white pb-4"></h2>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="my-2">
            <a href="{{ path('admin_user_profile_action', {'id':  user}) }}" class="btn btn-light">Atgal į vartotojo puslapį</a>
        </div>
        <div class="row mt-5 py-3">
            <div class="col-12">
                <div class="mb-2">
                </div>
            </div>
            <div class="col-12">
                <table class="table">
                    <tr>
                        <th>Būrelis</th>
                        <th>Komentaro data</th>
                        <th>Komentaras</th>
                        <th></th>
                    </tr>
                    {% for comment in comments %}
                        <tr>
                            <th>
                                <a href="{{ path('activity_show', {'id': comment.activity.id}) }}">{{ comment.activity.name }}</a>
                            </th>
                            <th>{{ comment.createdAt|date('Y-m-d H:i:s') }}</th>
                            <th>{{ comment.commentText }}</th>
                            <th>
                                {{ include('admin/_deleteForm.html.twig') }}
                            </th>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}