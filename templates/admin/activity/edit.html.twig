{% extends 'base.html.twig' %}

{% block title %}Edit activity{% endblock %}

{% block body %}
<header class="bg-profile">
    <div class="container">
        <div class="row align-items-end min-height">
            <div class="col-12">
                <h2 class="text-white pb-4">Būrelio informacija</h2>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row mt-4 py-3">
        <div class="col-12">
            <div class="mb-2">
                <a class="btn btn-light border-rad" href="/">Atgal</a>
            </div>
            <h2>Informacijos redagavimas</h2>
        </div>
        <div class="col-12 col-md-6 mb-5 order-md-2">
            {% if pathToLogo is not empty %}
                <img class="img-fluid" src="{{ asset(pathToLogo) }}"/>
            {% else %}
                <img class="card-img-top" src="https://placeimg.com/640/480/any" alt="Card image cap"/>
            {% endif %}
        </div>
        <div class="col-12 col-md-6 activity-edit-form pb-5">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-green" formnovalidate="formnovalidate">Išsaugoti</button>
            {{ form_end(form) }}
        </div>        
    </div>
</div>
{% endblock %}