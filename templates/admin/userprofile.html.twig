{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<header class="bg-profile">
    <div class="container">
        <div class="row align-items-end min-height">
            <div class="col-12">
                <h2 class="text-white pb-4">Vartotojo profilis</h2>
            </div>
        </div>
    </div>
</header>
<div class="container py-5">
    <div class="my-2">
        <a href="{{ path('admin_user_list') }}" class="btn btn-light border-rad">Atgal</a>
    </div>
    <table class="table">
        <tr>
            <th>Vardas</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Pavardė</th>
            <td>{{ user.surname }}</td>
        </tr>
        <tr>
            <th>Elektroninis paštas</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Telefonas</th>
            <td>{{ user.phone }}</td>
        </tr>
        {% if 'ROLE_OWNER' in user.roles %}
            <tr>
                <th>Būrelis</th>
                <td><a href="{{ path('activity_show', {'id': user.activity}) }}" class="btn btn-register">Peržiūrėti</a></td>
            </tr>
        {% endif %}
        <tr>
            <th>Komentarai</th>
            <td><a href="{{ path('admin_user_comments_action', {'id': user.id}) }}" class="btn btn-register">Peržiūrėti</a></td>
        </tr>
    </table>
    {{ form_start(form) }}
        {% if user.isblocked == true %}
            {{ form_row(form.blockAction, {
                'label': "Unblock",
                'attr': {'class': 'btn btn-register'}
            }) }}
        {% else %}
            {{ form_row(form.blockAction, {
                'label': "Block",
                'attr': {'class': 'btn btn-danger border-rad'}
            }) }}
        {% endif %}
    {{ form_end(form) }}
</div>
{% endblock %}
