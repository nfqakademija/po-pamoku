{% extends 'base.html.twig' %}


{% block body %}
<div class="registration-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-7 login-col">
                <div class="card my-0 my-sm-5">
                    <div class="bg-blue">
                        <div class="login-aside">
                            <h1 class="registration-header">Prisijungimas</h1>
                        </div>
                    </div>
                    <div class="p-4 login-form">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {{ form_start(form) }}
                                {{ form_row(form._username) }}
                                {{ form_row(form._password) }}
                                <button class="btn btn-green" type="submit">Prisijungti</button>
                        {{ form_end(form) }}
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}