{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}


{% block body %}
    {% if not (is_granted('ROLE_ADMIN') or is_granted('ROLE_USER')) %}
        <form action="{{ path('login') }}" method="post" class="login-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-group">
                <input type="text" id="username" placeholder="username" class="form-control" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password" class="form-control" id="password" name="_password" />
                <input type="hidden" name="_target_path" value="/" />
            </div>

            <button class="btn btn-primary" type="submit">login</button>
        </form>
    {% endif %}
{% endblock %}