{% extends 'base.html.twig' %}


{% block body %}
<div class="registration-bg">
    <div class="container registration-cont">
        <div class="card">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-5 bg-blue">
                        <div class="registration-aside row no-gutters">
                            <h1 class="registration-header">Prisijungimas</h1>
                            <p class="lead">Po pamokų - tai platforma skirta atrasti įdomiausius būrelius ir po pamokines veiklas. Smagiausi užsiėmimai skirti įvairių amžiaus grupių vaikams bei jaunuoliams.</p>
                            <div class="col-12">
                                <p>Dar neturite paskyros?</p>
                                <div class="dropdown">
                                    <a class="btn btn-register mr-2 dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Registruoti
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="{{ path('registration', {'role': 'user'}) }}">Vartotoją</a>
                                        <a class="dropdown-item" href="{{ path('registration', {'role': 'owner'}) }}">Būrelį</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-7 bg-white">
                        <div class="registration-form">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {{ form_start(form) }}
                            {{ form_row(form._username) }}
                            {{ form_row(form._password) }}
                            <button class="btn btn-green" type="submit">Prisijungti</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}