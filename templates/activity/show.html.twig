{% extends 'base.html.twig' %}

{% block title %}{{ activity.name }}{% endblock %}

{% block body %}
<header class="bg-profile">
    <div class="container">
        <div class="row align-items-end min-height">
            <div class="col-12">
                <h2 class="text-white pb-4">{{ activity.name }}</h2>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row mt-5 py-4">
    {% if activity  %}
        <div class="col-12">
            <a class="btn btn-light" href="/">Atgal</a>
        </div>
        <div class="col-12 col-lg-6">
            <h1>{{ activity.name }} - {{ activity.subcategory.name }}</h1>
            <p>Adresas: {{ activity.location.street }} {{ activity.location.house }}{% if activity.location.apartment %}-{{ activity.location.apartment }}{% endif %},
            {{ activity.location.city.name }} </p>
            <p>Aprašymas</p>
            <p>{{ activity.description }}</p>
        </div>
        <div class="col-12 col-lg-6">
            {% if activity.pathToLogo is not empty  %}
                <img class="img-fluid" src="{{ asset( activity.pathToLogo) }}"/>
            {% else %}
                <img class="card-img-top" src="https://placeimg.com/640/480/any" alt="Card image cap" />
            {% endif %}

        </div>
    </div>
    <div class="row pb-5">
         <div class="col-12 col-sm-4">
             <ul class="list-group list-group-flush">
                <li class="list-group-item list-group-item-secondary">Tvarkaraštis:</li>
                {% for timetable in activity.timetables %}
                <li class="list-group-item">{{ timetable.weekday.name }}: {{ timetable.timeFrom|date("H:i") }} - {{ timetable.timeTo|date("H:i") }}</li>
            {% endfor %}
                
            </ul>
              
        </div>
        <div class="col-12 col-sm-4">
            <ul class="list-group list-group-flush">
                <li class="list-group-item list-group-item-secondary">Kaina:</li>
                <li class="list-group-item">{{ activity.priceFrom }} - {{ activity.priceTo }}</li>
            </ul>
        
        </div>
         <div class="col-12 col-sm-4">
            <ul class="list-group list-group-flush">
                <li class="list-group-item list-group-item-secondary">Amžius:</li>
                <li class="list-group-item">{{ activity.ageFrom }} - {{ activity.ageTo }}</li>
            </ul>
        
        </div>
       
        
    </div> 
      
    {% endif %}
    <div id="comments"></div>
    <div id='comment'>
        {{ form_start(form, {
            'class': 'form-inline',
            'novalidate': 'novalidate',
            'attr': {'id': 'commentForm'}
        }) }}
        {{ form_errors(form) }}
        {{ form_row(form.commentText) }}
        <button type="submit" class="btn btn-primary">Siųsti atsiliepimą</button>
        {{ form_end(form) }}

    </div>
   
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('build/js/comment.js') }}"></script>
    <script src="{{ asset('build/js/comments.js') }}"></script>
{{ parent() }}
{% endblock %}