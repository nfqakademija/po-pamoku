{% extends 'base.html.twig' %}

{% block title %}{{ activity.name }}{% endblock %}

{% block body %}
<header class="bg-profile">
    <div class="container">
        <div class="row align-items-end min-height">
            <div class="col-12">
                <h1 class="text-white pb-4">{{ activity.name }}</h1>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row pb-4 pt-2">
    {% if activity  %}
        <div class="col-12 my-3">
            <a class="btn btn-light border-rad" href="/">Atgal</a>
        </div>
        <div class="col-12 col-lg-4">
            {% if activity.pathToLogo is not empty  %}
                <img class="img-fluid mb-3" src="{{ asset( activity.pathToLogo) }}"/>
            {% else %}
                <img class="card-img-top mb-3" src="https://placeimg.com/640/480/any" alt="Card image cap" />
            {% endif %}
            <ul class="info-list">
                <li>
                <span>
                <i class="fas fa-star"></i></span>{{ activity.rating|round(2) }}/5</li>
                <li><span><i class="fas fa-euro-sign"></i></span>{{ activity.priceFrom }} - {{ activity.priceTo }}</li>
                <li><span><i class="fas fa-user"></i></span>{{ activity.ageFrom }} - {{ activity.ageTo }}</li>
                <li><span><i class="fas fa-map-marker"></i></span>{{ activity.location.street }} {{ activity.location.house }}{% if activity.location.apartment %}-{{ activity.location.apartment }}{% endif %},
                            {{ activity.location.city.name }}</li>
                <li><span><i class="fas fa-calendar-alt"></i>Tvarkaraštis</span>
                    <ul>
                         {% for timetable in activity.timetables %}
                                <li class="">{{ timetable.weekday.name }}:
                                {{ timetable.timeFrom|date("H:i") }} - {{ timetable.timeTo|date("H:i") }}</li>
                                {% endfor %}
                    </ul>
                </li>
                   
            </ul>
        </div>
        <div class="col-1"></div>
             <div class="col-12 col-lg-6">
            <ul class="nav nav-tabs" id="activityTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Aprašymas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="review-tab" data-toggle="tab" href="#reviewTab" role="tab" aria-controls="profile" aria-selected="false">Atsiliepimai</a>
                </li>
            </ul>
            <div class="tab-content" id="activityTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <p class="px-2 mt-4 pb-5">{{ activity.description }}</p>
                </div>
                <div class="tab-pane fade" id="reviewTab" role="tabpanel" aria-labelledby="review-tab">
                    <div class="row">
                        
                            {{ include('activity/_ratingForm.html.twig') }}
                        
                        <div class="py-4 px-2 col-12" id="comment">
                            <h3 class="pb-3">Komentarai</h3>
                            {{ include('activity/_commentForm.html.twig') }}
                        </div>
                        <div id="comments"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        {% endif %}



</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/comments.js') }}"></script>
{{ parent() }}
{% endblock %}
