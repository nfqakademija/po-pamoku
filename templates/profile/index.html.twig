{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<header class="bg-profile">
    <div class="container">
        <div class="row align-items-end min-height">
            <div class="col-12">
                <h2 class="text-white pb-4">Jūsų informacija</h2>
            </div>
        </div>
    </div>
</header>
<div class="container py-5">
    <table class="table">
        {% for key, val in profileVars %}
            {% if key != 'Būrelis' %}
                <tr>
                    <th>{{ key }}</th>
                    <td>{{ val }}</td>
                </tr>
            {% elseif is_granted('ROLE_OWNER')%}
                <tr>
                    <th>{{ key }}</th>
                    <td>
                        <a href="{{ path('activity_show', {'id': val }) }}" class="btn btn-secondary">
                            Peržiūrėti
                        </a>
                        <a href="{{ path('activity_edit', {'id': val }) }}" class="btn btn-secondary">
                            Redaguoti
                        </a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
      <a href="{{ path('profile_edit') }}" class="btn btn-secondary">Redaguoti profilį</a>
    <a href="{{ path('change_password') }}" class="btn btn-secondary">Keisti slaptažodį</a>
</div>
  

{% endblock %}
